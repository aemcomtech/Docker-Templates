# --- GLOBAL SYSTEM SETTINGS ---
PUID=1000
PGID=1000
TZ=Australia/Melbourne
DOMAIN=

# --- NETWORK CONFIGURATION ---
YOUR_NETWORK_1=
YOUR_NETWORK_2=

# --- N8N CONFIGURATION ---
# Subdomain for the main editor interface
N8N_SUBDOMAIN=n8n-admin

# SECURITY: Generate a random string for this. DO NOT CHANGE once set.
# Command to generate: openssl rand -hex 16
N8N_ENCRYPTION_KEY=

# AUTH: Token for Python Task Runners to talk to the Main instance
N8N_RUNNERS_AUTH_TOKEN=

# --- DATABASE CONNECTION (HUB) ---
# Connects to your centralized Postgres instance
DB_POSTGRESDB_HOST=postgres-hub
POSTGRES_DB=n8n_queue
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=

# --- REDIS CONNECTION (HUB) ---
# Required for Queue Mode
QUEUE_BULL_REDIS_HOST=redis-hub
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DB=1

