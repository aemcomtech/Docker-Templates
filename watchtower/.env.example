# --- GLOBAL SYSTEM SETTINGS ---
TZ=Australia/Melbourne

# --- NETWORK CONFIGURATION ---
YOUR_NETWORK_1=

# --- WATCHTOWER SETTINGS ---
# Schedule: At 04:00 AM everyday
# Cron format: Sec Min Hour Day Month Weekday
WATCHTOWER_SCHEDULE=0 0 4 * * *

# Cleanup: Remove old images after update (True/False)
WATCHTOWER_CLEANUP=true

# Stopped Containers: Update them too? (True/False)
WATCHTOWER_INCLUDE_STOPPED=false

# --- NOTIFICATIONS (SHOUTRRR) ---
# Format for Discord: discord://token@webhook_id
# Format for Telegram: telegram://token@telegram_chat_id
WATCHTOWER_NOTIFICATION_URL=

